@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

@code {
    [CascadingParameter]
    public HttpContext? HttpContext { get; set; }

    [Inject]
    public required NavigationManager NavManager { get; set; }

    protected override void OnInitialized() {
        if (!HttpContext?.User.Identity?.IsAuthenticated ?? true) {
            if (NavManager.Uri.Contains("/access-denied") || NavManager.Uri.Contains("/login") || NavManager.Uri.Contains("/logout")) {
                return;
            }
            NavManager.NavigateTo("/access-denied", true);
        }
    }
}

<div class="top-row">
    <a class="page-title" href="/">Run Tracker</a>
    <a class="add-run" href="/add">Add Run</a>
    @* <a class="add-run" href="/plan">Plan</a> *@
</div>

<div class="page">
    <main>
        
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>